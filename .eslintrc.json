{
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
      
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "@typescript-eslint/no-unused-vars": "warn",
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto",
          "semi": true,
          "singleQuote": true,
          "trailingComma": "none"
        }
      ],
      "indent": ["error", 2]      
    },
    "overrides": [
      {
        "files": ["*.ts", "*.tsx"],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  }
  